# ===========================================
# TAO Treasury Management - Environment Config
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -------------------------------------------
# REQUIRED: Wallet Configuration
# -------------------------------------------
WALLET_ADDRESS=5YourColdkeyAddressHere

# -------------------------------------------
# REQUIRED: TaoStats API
# -------------------------------------------
# Get your API key from https://taostats.io
TAOSTATS_API_KEY=your_taostats_api_key

# -------------------------------------------
# OPTIONAL: Additional Data Sources
# -------------------------------------------
# CoinGecko API (for USD prices, market data)
COINGECKO_API_KEY=

# Subgraph endpoints (if needed for on-chain queries)
SUBGRAPH_API_KEY=

# -------------------------------------------
# Database (auto-configured for Docker)
# -------------------------------------------
POSTGRES_USER=tao_user
POSTGRES_PASSWORD=tao_password
POSTGRES_DB=tao_treasury
DATABASE_URL=postgresql+asyncpg://tao_user:tao_password@postgres:5432/tao_treasury

# For local development outside Docker:
# DATABASE_URL=postgresql+asyncpg://tao_user:tao_password@localhost:5435/tao_treasury

# -------------------------------------------
# Redis (auto-configured for Docker)
# -------------------------------------------
REDIS_URL=redis://redis:6379/0

# -------------------------------------------
# Environment
# -------------------------------------------
ENVIRONMENT=development
DEBUG=true

# -------------------------------------------
# Fixed Ports (do not change)
# -------------------------------------------
FRONTEND_PORT=3050
BACKEND_PORT=8050
POSTGRES_PORT=5435
